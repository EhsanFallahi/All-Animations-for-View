        android:background="@drawable/bg_button"
        android:padding="8dp"
        android:text="step 2"
        android:textAllCaps="false"
        android:textColor="#00C853"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_step_3"
